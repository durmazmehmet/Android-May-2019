<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/mainActivityEditTextName"
        android:hint="Adınız"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/mainActivityEditTextCitizenId"
        android:hint="T.C. Kimlik Numaranız"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/mainActivityEditTextPhone"
        android:hint="Telefon numaranız"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone" />
    <Button
        android:onClick="onSaveButtonClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kaydet" />
    <Button
        android:onClick="onClearButtonClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temizle" />
    <Button
        android:onClick="onExitButtonClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Çıkış" />
    <TextView
        android:onClick="onPersonInfoTextViewClicked"
        android:id="@+id/mainActivityTextViewPersonInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>