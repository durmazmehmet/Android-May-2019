<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <Button
            android:onClick="onOKButtonsClicked"
            android:text="OK1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainActivityButtonOK1"/>
    <Button
            android:onClick="onOKButtonsClicked"
            android:text="OK2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainActivityButtonOK2"/>

    <Button
            android:onClick="onOKButtonsClicked"
            android:text="OK3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainActivityButtonOK3"/>

    <Button
            android:onClick="onOKButtonsClicked"
            android:text="OK4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainActivityButtonOK4"/>

    <Button
            android:onClick="onOKButtonsClicked"
            android:text="OK5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainActivityButtonOK5"/>
    <Button
            android:onClick="onExitButtonClicked"
            android:text="EXIT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainActivityButtonExit"/>

</LinearLayout>